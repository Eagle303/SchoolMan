<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="SchoolMan" Height="300" Width="300">
    <Grid Margin="0,10,0,-10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="99*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Try" Content="OK" HorizontalAlignment="Left" Height="23" Margin="28,198,0,0" VerticalAlignment="Top" Width="88" FontFamily="Bebas" Cursor="Hand" FontSize="20" BorderBrush="#FF008F0D" Foreground="Black" BorderThickness="0" Background="#FF00FF51" Padding="0,0,-1,0" UseLayoutRounding="False" Click="Try_Click" Grid.ColumnSpan="2"/>
        <TextBox x:Name="IdBox" HorizontalAlignment="Left" Height="18" Margin="31,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" Grid.Column="1"/>
        <TextBox x:Name="PswBox" HorizontalAlignment="Left" Height="18" Margin="31,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" TextChanged="PswBox_TextChanged" Grid.Column="1"/>
        <Label Content="ID" HorizontalAlignment="Left" Height="18" Margin="48,23,0,0" VerticalAlignment="Top" Width="75" Padding="0" Grid.ColumnSpan="2"/>
        <Label Content="Mot de passe" HorizontalAlignment="Left" Height="18" Margin="48,62,0,0" VerticalAlignment="Top" Width="75" Padding="0" Grid.ColumnSpan="2"/>
    </Grid>
</Window> 
